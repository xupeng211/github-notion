# ğŸš€ ROBUST DOCKERFILE FOR GITHUB ACTIONS
# é’ˆå¯¹GitHub Actionsç¯å¢ƒä¼˜åŒ–çš„è¶…ç¨³å®šDockeré•œåƒæ„å»º
# ç¡®ä¿åœ¨èµ„æºå—é™çš„CIç¯å¢ƒä¸­èƒ½å¤Ÿç¨³å®šæ„å»ºæˆåŠŸ

# =====================================
# Stage 1: æ„å»ºé˜¶æ®µ - ä½¿ç”¨ç¨³å®šçš„åŸºç¡€é•œåƒ
# =====================================
FROM python:3.11-slim-bullseye as builder

# è®¾ç½®æ„å»ºå‚æ•°
ARG VERSION=unknown
ARG BUILD_TIME=unknown

# è®¾ç½®ç¯å¢ƒå˜é‡ï¼Œä¼˜åŒ–æ„å»ºè¿‡ç¨‹
ENV DEBIAN_FRONTEND=noninteractive \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_PREFER_BINARY=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    PIP_DEFAULT_TIMEOUT=100

# è®¾ç½®å·¥ä½œç›®å½•
WORKDIR /build

# å®‰è£…ç³»ç»Ÿä¾èµ– - åªå®‰è£…æ„å»ºå¿…éœ€çš„æœ€å°ä¾èµ–
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    build-essential \
    curl \
    ca-certificates \
    git \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean \
    && apt-get autoremove -y

# å‡çº§pipå¹¶å®‰è£…æ„å»ºå·¥å…·
RUN python -m pip install --no-cache-dir --upgrade \
    pip==23.3.1 \
    setuptools==69.0.0 \
    wheel==0.42.0

# å¤åˆ¶requirementsæ–‡ä»¶å¹¶å®‰è£…Pythonä¾èµ–
COPY requirements.txt .
RUN pip install --no-cache-dir --user -r requirements.txt

# =====================================
# Stage 2: è¿è¡Œé˜¶æ®µ - è¶…ç²¾ç®€çš„è¿è¡Œç¯å¢ƒ
# =====================================
FROM python:3.11-slim-bullseye as runtime

# è®¾ç½®æ„å»ºä¿¡æ¯
ARG VERSION=unknown
ARG BUILD_TIME=unknown

# æ·»åŠ æ„å»ºä¿¡æ¯æ ‡ç­¾
LABEL maintainer="xupeng211" \
    version="${VERSION}" \
    build-time="${BUILD_TIME}" \
    description="GitHub-Notion Sync Service - Robust Build" \
    org.opencontainers.image.source="https://github.com/xupeng211/github-notion" \
    org.opencontainers.image.title="GitHub-Notion Sync" \
    org.opencontainers.image.version="${VERSION}"

# è®¾ç½®è¿è¡Œæ—¶ç¯å¢ƒå˜é‡
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH=/app \
    PATH="/home/appuser/.local/bin:$PATH" \
    DEBIAN_FRONTEND=noninteractive

# å®‰è£…è¿è¡Œæ—¶å¿…éœ€çš„ç³»ç»Ÿå·¥å…·
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    curl \
    ca-certificates \
    dumb-init \
    procps \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean \
    && apt-get autoremove -y

# åˆ›å»ºérootç”¨æˆ·å’Œç›®å½•
RUN groupadd --gid 1000 appuser && \
    useradd --uid 1000 --gid 1000 --create-home --shell /bin/bash appuser && \
    mkdir -p /app/data /app/logs && \
    chown -R appuser:appuser /app

# åˆ‡æ¢åˆ°åº”ç”¨ç›®å½•
WORKDIR /app

# å¤åˆ¶Pythonä¾èµ–ï¼ˆä»æ„å»ºé˜¶æ®µï¼‰
COPY --from=builder --chown=appuser:appuser /root/.local /home/appuser/.local

# å¤åˆ¶åº”ç”¨ä»£ç 
COPY --chown=appuser:appuser . .

# ç¡®ä¿å…³é”®ç›®å½•å­˜åœ¨å¹¶è®¾ç½®æ­£ç¡®æƒé™
RUN mkdir -p /app/data /app/logs /app/alembic/versions && \
    chown -R appuser:appuser /app && \
    chmod +x /app/alembic/env.py 2>/dev/null || true

# åˆ‡æ¢åˆ°érootç”¨æˆ·
USER appuser

# éªŒè¯Pythonç¯å¢ƒ
RUN python --version && \
    pip --version && \
    python -c "import fastapi; print('FastAPI installed successfully')" && \
    python -c "import uvicorn; print('Uvicorn installed successfully')"

# å¥åº·æ£€æŸ¥é…ç½®
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:${APP_PORT:-8000}/health || exit 1

# æš´éœ²ç«¯å£
EXPOSE 8000

# è®¾ç½®æ„å»ºä¿¡æ¯ç¯å¢ƒå˜é‡
ENV BUILD_VERSION="${VERSION}" \
    BUILD_TIME="${BUILD_TIME}"

# ä½¿ç”¨dumb-initä½œä¸ºinitè¿›ç¨‹ï¼Œé˜²æ­¢åƒµå°¸è¿›ç¨‹
ENTRYPOINT ["dumb-init", "--"]

# å¯åŠ¨å‘½ä»¤ - ä½¿ç”¨é«˜æ€§èƒ½é…ç½®
CMD ["python", "-m", "uvicorn", "app.server:app", \
    "--host", "0.0.0.0", \
    "--port", "8000", \
    "--workers", "1", \
    "--loop", "asyncio", \
    "--access-log", \
    "--log-level", "info"]
