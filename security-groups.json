{
    "SecurityGroups": {
        "ALBSecurityGroup": {
            "GroupName": "gitee-notion-sync-alb-sg",
            "Description": "Security group for Application Load Balancer",
            "InboundRules": [
                {
                    "IpProtocol": "tcp",
                    "FromPort": 80,
                    "ToPort": 80,
                    "CidrIp": "0.0.0.0/0",
                    "Description": "Allow HTTP inbound"
                },
                {
                    "IpProtocol": "tcp",
                    "FromPort": 443,
                    "ToPort": 443,
                    "CidrIp": "0.0.0.0/0",
                    "Description": "Allow HTTPS inbound"
                }
            ],
            "OutboundRules": [
                {
                    "IpProtocol": "-1",
                    "FromPort": -1,
                    "ToPort": -1,
                    "CidrIp": "0.0.0.0/0",
                    "Description": "Allow all outbound traffic"
                }
            ]
        },
        "ECSSecurityGroup": {
            "GroupName": "gitee-notion-sync-ecs-sg",
            "Description": "Security group for ECS tasks",
            "InboundRules": [
                {
                    "IpProtocol": "tcp",
                    "FromPort": 8787,
                    "ToPort": 8787,
                    "SourceSecurityGroupId": "${ALB_SECURITY_GROUP_ID}",
                    "Description": "Allow inbound traffic from ALB"
                }
            ],
            "OutboundRules": [
                {
                    "IpProtocol": "-1",
                    "FromPort": -1,
                    "ToPort": -1,
                    "CidrIp": "0.0.0.0/0",
                    "Description": "Allow all outbound traffic"
                }
            ]
        }
    }
} 