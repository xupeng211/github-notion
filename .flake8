[flake8]
max-line-length = 120
ignore = E302,W291,W293,W504,E127,E128
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    venv,
    env,
    .venv,
    migrations/
per-file-ignores = 
    app/enhanced_metrics.py:E501,E302
    app/idempotency.py:W504,W503
    app/webhook_security.py:E501
    # 暂时忽略旧代码的格式问题，专注于功能
    app/comment_sync.py:E127,E128
    app/enhanced_service.py:E127,E128
    app/github.py:E128
    app/mapper.py:E128
    app/models.py:E128
    app/notion.py:E128
    app/service.py:E127,E128
