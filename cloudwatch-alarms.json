{
  "alarms": [
    {
      "alarmDescription": "CPU utilization is too high",
      "comparisonOperator": "GreaterThanThreshold",
      "evaluationPeriods": 2,
      "metric": "CPUUtilization",
      "name": "HighCPUUtilization",
      "namespace": "AWS/EC2",
      "period": 300,
      "statistic": "Average",
      "threshold": 80
    },
    {
      "alarmDescription": "Memory utilization is too high",
      "comparisonOperator": "GreaterThanThreshold",
      "evaluationPeriods": 2,
      "metric": "mem_used_percent",
      "name": "HighMemoryUtilization",
      "namespace": "CWAgent",
      "period": 300,
      "statistic": "Average",
      "threshold": 85
    },
    {
      "alarmDescription": "High number of 5xx errors",
      "comparisonOperator": "GreaterThanThreshold",
      "dimensions": {
        "status": "5xx"
      },
      "evaluationPeriods": 2,
      "metric": "http_requests_total",
      "name": "HighErrorRate",
      "namespace": "CWAgent",
      "period": 300,
      "statistic": "Sum",
      "threshold": 10
    },
    {
      "alarmDescription": "API latency is too high",
      "comparisonOperator": "GreaterThanThreshold",
      "evaluationPeriods": 2,
      "metric": "http_request_duration_seconds",
      "name": "APILatency",
      "namespace": "CWAgent",
      "period": 300,
      "statistic": "p95",
      "threshold": 2
    },
    {
      "alarmDescription": "Disk space utilization is too high",
      "comparisonOperator": "GreaterThanThreshold",
      "evaluationPeriods": 2,
      "metric": "disk_used_percent",
      "name": "DiskSpaceUtilization",
      "namespace": "CWAgent",
      "period": 300,
      "statistic": "Average",
      "threshold": 85
    }
  ]
}
