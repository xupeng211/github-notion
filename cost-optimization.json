{
  "BudgetConfiguration": {
    "BudgetLimit": {
      "Amount": "100",
      "Unit": "USD"
    },
    "Name": "gitee-notion-sync-budget",
    "Notifications": [
      {
        "ComparisonOperator": "GREATER_THAN",
        "NotificationType": "ACTUAL",
        "Recipients": [
          "${NOTIFICATION_EMAIL}"
        ],
        "Threshold": 80
      },
      {
        "ComparisonOperator": "GREATER_THAN",
        "NotificationType": "FORECASTED",
        "Recipients": [
          "${NOTIFICATION_EMAIL}"
        ],
        "Threshold": 100
      }
    ],
    "TimeUnit": "MONTHLY"
  },
  "CostAllocationTags": [
    "Environment",
    "Project",
    "CostCenter",
    "Owner"
  ],
  "CostOptimizationRules": {
    "CloudWatchLogs": {
      "ExportToS3": {
        "Bucket": "${LOG_ARCHIVE_BUCKET}",
        "Enabled": true,
        "ExportAfterDays": 7,
        "Prefix": "logs/"
      },
      "RetentionInDays": 30
    },
    "EC2AutoScaling": {
      "MaxCapacity": 3,
      "MinCapacity": 1,
      "ScaleInCooldown": 300,
      "ScaleOutCooldown": 300,
      "TargetCPUUtilization": 70
    },
    "ECSOptimization": {
      "ServiceScaling": {
        "MaxTasks": 3,
        "MinTasks": 1
      },
      "TaskDefinition": {
        "CPU": "256",
        "Memory": "512"
      }
    },
    "S3Lifecycle": {
      "BackupBucket": {
        "Expiration": 365,
        "TransitionToGlacier": 90,
        "TransitionToIA": 30
      },
      "LogBucket": {
        "Expiration": 180,
        "TransitionToGlacier": 60,
        "TransitionToIA": 30
      }
    }
  },
  "Monitoring": {
    "Alerts": {
      "AnomalyDetection": {
        "Enabled": true,
        "Threshold": 30
      },
      "DailyCostThreshold": 10,
      "UnusedResourceCheck": true,
      "WeeklyCostThreshold": 50
    },
    "CostAndUsageReport": {
      "Bucket": "${COST_REPORT_BUCKET}",
      "Enabled": true,
      "Format": "Parquet",
      "Prefix": "cost-reports/",
      "TimeUnit": "HOURLY"
    }
  },
  "ResourceTags": {
    "CostCenter": "engineering",
    "Environment": "production",
    "Owner": "devops-team",
    "Project": "gitee-notion-sync"
  },
  "Savings": {
    "ReservedInstances": {
      "Enabled": false,
      "Terms": "1yr"
    },
    "SavingsPlans": {
      "Enabled": true,
      "PaymentOption": "No Upfront",
      "Terms": "1yr",
      "Type": "Compute"
    }
  }
}
